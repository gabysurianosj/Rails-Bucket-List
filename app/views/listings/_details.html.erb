<% listings.each do |listing| %>
  <div class="card card-sm mb-3">
    <h5 class="card-header"><%= link_to listing.todolist.name, user_todolist_path(current_user, listing.todolist) %></h5>
    <div class="card-body">
      <p><strong>Your Status</strong>:<br>
        <%= listing.user_status %><br>
      <strong>Your Season</strong>: <%= listing.user_season %></p>
      <%= button_to "Edit To-Do List Details", edit_trip_listing_path(trip, listing), :method => "get", class: "btn btn-warning btn-sm btn-block" %>
      <%= form_for listing, method: :delete do |f| %>
        <%= f.submit "Remove From To-Do List", class:"btn btn-sm btn-danger btn-block" %>
      <% end %>
    </div>
  </div>
<% end %>
