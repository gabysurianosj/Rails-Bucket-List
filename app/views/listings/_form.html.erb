<% if listing.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <ul>
    <% listing.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for [trip, listing] do |f| %>
  <strong><%= f.label :todolist %></strong>
  <%= f.collection_select :todolist_id, alphebetize(current_user.todolists), :id, :name %><br>
  <strong><%= f.label :user_status %></strong>
  <%= f.text_field :user_status, class:"form-control" %><br>
  <strong><%= f.label :user_season %></strong>
  <%= f.number_field :user_season, class:"form-control" %><br>
  <%= f.check_box :priority %> <strong>Priority?</strong> <br>
  <%= f.hidden_field :user_id, value: current_user.id %><br>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
