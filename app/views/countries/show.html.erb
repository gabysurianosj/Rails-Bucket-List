<% content_for :header do %>
  <h1><%= @country.name %></h1>
<% end %>

<% content_for :vertical_nav do %>
  <ul class="nav flex-column">
    <li class="nav-item mb-3">
      <%= button_to "Back to Countries", countries_path, :method => "get", class: "btn btn-info btn-block" %>
    </li>
    <li class="nav-item">
      <%= button_to "Back to Trips", trips_path, :method => "get", class: "btn btn-info btn-block" %>
    </li>
  </ul>
<% end %>

<% content_for :content do %>
  <p>Trips:</p>
  <% alphebetize(@trips).each do |trip| %>
    <p><%= link_to trip.title, trip_path(trip) %></p>
  <% end %>
<% end %>
