<% content_for :header do %>
  <h1>Show Categories</h1>
<% end %>

<% content_for :vertical_nav do %>
  <ul class="nav flex-column">
    <li class="nav-item mb-3">
      <%= button_to "Back to Trips", trips_path, :method => "get", class: "btn btn-info btn-block" %>
    </li>
    <li class="nav-item">
      <%= button_to "Back to my To-Do Lists", user_todolists_path(current_user), :method => "get", class: "btn btn-info btn-block" %>
    </li>
  </ul>
<% end %>

<% content_for :content do %>
  <p>Click on a category below to see all trips in that category</p>
  <% alphebetize(@categories).each do |category| %>
    <p><%= link_to category.name, category_path(category) %></p>
  <% end %>
<% end %>
