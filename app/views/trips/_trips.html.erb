<table class="table table-striped table-hover table-light">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Country</th>
      <th scope="col">Seasons</th>
      <th scope="col">Categories</th>
    </tr>
  </thead>
  <tbody>
    <% alphebetize(trips).each do |trip| %>
      <tr>
        <th scope="row"><%= link_to trip.title, trip_path(trip) %></th>
        <td><%= trip.country.name %></td>
        <td><%= trip.season %></td>
        <td><%= trip.categories.map { |category| category.name }.join(', ') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
