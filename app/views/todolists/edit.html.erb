<% content_for :header do %>
  <h1>Update <%= @todolist.name %> To-Do List</h1>
<% end %>

<% content_for :vertical_nav do %>
  <ul class="nav flex-column">
    <li class="nav-item mb-3">
      <%= button_to "Back to To-Do Lists", user_todolists_path(current_user), :method => "get", class: "btn btn-info btn-block" %>
    </li>
  </ul>
<% end %>

<% content_for :content do %>
  <%= render partial: "form", locals: {user: @user, todolist: @todolist} %>
<% end %>
